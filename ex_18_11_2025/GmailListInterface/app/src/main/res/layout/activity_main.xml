                        app:layout_constraintTop_toTopOf="@+id/av3" />

                    <TextView
                        android:id="@+id/tm3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:04 AM"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/sn3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/sb3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="8h de formation gratuite et les nou..."
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/st3"
                        app:layout_constraintStart_toStartOf="@+id/sn3"
                        app:layout_constraintTop_toBottomOf="@+id/sn3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Photoshop, SEO, Blender, CSS, WordPre..."
                        android:textColor="#757575"
                        app:layout_constraintEnd_toStartOf="@+id/st3"
                        app:layout_constraintStart_toStartOf="@+id/sn3"
                        app:layout_constraintTop_toBottomOf="@+id/sb3" />

                    <ImageView
                        android:id="@+id/st3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tm3"
                        app:tint="#757575" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/av4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#607D8B"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/sn4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="support"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/tm4"
                        app:layout_constraintStart_toEndOf="@+id/av4"
                        app:layout_constraintTop_toTopOf="@+id/av4" />

                    <TextView
                        android:id="@+id/tm4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:26 AM"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/sn4"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/sb4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Société Ovh : suivi de vos services..."
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/st4"
                        app:layout_constraintStart_toStartOf="@+id/sn4"
                        app:layout_constraintTop_toBottomOf="@+id/sn4" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="SAS OVH - http://www.ovh.com 2 rue K..."
                        android:textColor="#757575"
                        app:layout_constraintEnd_toStartOf="@+id/st4"
                        app:layout_constraintStart_toStartOf="@+id/sn4"
                        app:layout_constraintTop_toBottomOf="@+id/sb4" />

                    <ImageView
                        android:id="@+id/st4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tm4"
                        app:tint="#757575" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/av5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#8BC34A"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/sn5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Matt from Ionic"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/tm5"
                        app:layout_constraintStart_toEndOf="@+id/av5"
                        app:layout_constraintTop_toTopOf="@+id/av5" />

                    <TextView
                        android:id="@+id/tm5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBaseline_toBaselineOf="@+id/sn5"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/sb5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="The New Ionic Creator Is Here!"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/st5"
                        app:layout_constraintStart_toStartOf="@+id/sn5"
                        app:layout_constraintTop_toBottomOf="@+id/sn5" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Announcing the all-new Creator, build..."
                        android:textColor="#757575"
                        app:layout_constraintEnd_toStartOf="@+id/st5"
                        app:layout_constraintStart_toStartOf="@+id/sn5"
                        app:layout_constraintTop_toBottomOf="@+id/sb5" />

                    <ImageView
                        android:id="@+id/st5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tm5"
                        app:tint="#757575" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#F44336"
        app:tint="@color/white"
        android:contentDescription="Edit" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>